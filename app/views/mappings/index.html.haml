- title "My Dashboard", true, {fa_icon: 'tachometer'}

- content_for(:sidebar) do
  = render 'mappings/partials/mapping_tabs', active_tab: 'general'

.tab-content
  .tab-pane.active#general
    .panel.panel-default
      .panel-heading
        %h4 Mappings
      .panel-body
        .table-responsive
          %table.table.table-striped.table-hover.table-condensed
            %tbody
              %tr
                %th= "Incoming Number"
                %th= "Received Text"
                %th= "Reply Text"
                %th= "Mapping Type"
                %th= "Edit"
                %th= "Delete"
              - @mappings.each do |mapping|
                %tr
                  - if mapping.incoming_phone_number.nil?
                    %td= "+1000-000-0000"
                  - else
                    %td= mapping.incoming_phone_number
                  %td= mapping.received_text
                  %td= mapping.reply_text
                  %td= mapping.mapping_type.name
                  %td= link_to 'Edit', edit_mapping_path(mapping)
                  %td= link_to 'Destroy', mapping, method: :delete, data: { confirm: 'Are you sure?' }
            %table.table.table-striped.table-hover.table-condensed
            %tbody
              %tr
                = link_to 'Add New Mapping', new_mapping_path