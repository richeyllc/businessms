<p id="notice"><%= notice %></p>

<h1>Listing Mappings</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Phone number</th>
      <th>Incoming phone number</th>
      <th>Received text</th>
      <th>Reply text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mappings.each do |mapping| %>
      <tr>
        <td><%= mapping.customer %></td>
        <td><%= mapping.phone_number %></td>
        <td><%= mapping.incoming_phone_number %></td>
        <td><%= mapping.received_text %></td>
        <td><%= mapping.reply_text %></td>
        <td><%= link_to 'Show', mapping %></td>
        <td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
        <td><%= link_to 'Destroy', mapping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

